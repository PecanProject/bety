<!-- InstanceBeginEditable name="Full Width Content" -->
<div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline" role="grid">
  <%= render 'shared/search_form' %>
  <table class="table table-striped table-bordered table-hover datatable dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
		  <thead>
	      <tr role="row">
<th class="sorting_asc" role="columnheader" aria-controls="DataTables_Table_0" style="width: 100px;" aria-sort="ascending" ><%= sortable "variables.name", "Name" %></th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 50px"><%= sortable "variables.description", "Description" %></th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 100px"><%= sortable "variables.units", "Units" %></th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 67px"><%= sortable "variables.notes", "Notes" %></th>
<% if current_user.page_access_level ==1 %>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 100px;" ><%= sortable "variables.standard_name", "Standard Name" %></th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 50px"><%= sortable "variables.label", "Label" %></th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 100px"><%= sortable "variables.standard_units", "Standard Units" %></th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 50px"><%= sortable "variables.type", "Type" %></th>
<% end %>
<th role="columnheader" aria-controls="DataTables_Table_0" style="width: 110px">Actions</th>
      </tr>
    </thead>
    
	  <tbody role="alert" aria-live="polite" aria-relevant="all">
	    <% @variables.each do |variable| %>
        <tr<%= " style='background-color:yellow'" if @search and !@search[/[^\d]/] and variable.id == @search.to_i%>>
          <td class="center"><%= variable.name %></td>
          <td class="center"><%= variable.description %></td>
          <td class="center"><%= variable.units %></td>
          <td class="center"><%= variable.notes %></td>
          <% if current_user.page_access_level ==1 %>
          <td class="center"><%= variable.standard_name %></td>
          <td class="center"><%= variable.label %></td>
          <td class="center"><%= variable.standard_units %></td>
          <td class="center"><%= variable.type %></td>
          <% end %>

					<td class="center ">
					  <!-- SHOW -->
					  <%= link_to variable, :class => "button button-small", :alt => "show" do %>
					    <i class="icon-zoom-in"></i>
					  <% end %>
					  <!-- EDIT -->
					  <%= link_to edit_variable_path(variable), :class => "button button-small", :alt => "edit" do %>
					    <i class="icon-edit"></i>
					  <% end %>
					  <!-- DELETE -->
					  <% if current_user.page_access_level == 1 %>
              <%= link_to variable, :method => :delete, :type => 'variable', :confirm => 'Are you sure?', :class=> 'button button-small button-danger', :alt => "delete" do %>
                <i class="icon-trash"></i> 
              <% end %>
            <% end %>
				  </td>


        </tr>
      <% end %>

	  </tbody>
	</table>
  
	<div class="row final_paginagte_row">
	  <div class="span6">
	    <div class="dataTables_info" id="DataTables_Table_0_info">
				<%= page_entries_info @variables %>
      </div>
	  </div>
	  <div class="span6">
	    <div class="dataTables_paginate paging_bootstrap pagination alternate">
        <%= will_paginate @variables %>
      </div>
    </div>
  </div>
</div>


