<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
	      <h1>Editing Variable</h1>
			</header>

      <%= form_for(@variable) do |f| %>
        <%= f.error_messages %>

        <div class="row">
          <div class="eight columns alpha">
            <%= f.label :name %>
            <%= f.text_field :name, :class => "input-full" %>
            <br />
            <%= f.label :description %>
            <%= f.text_field :description, :class => "input-full" %>
            <br />
            <%= f.label :units %>
            <%= f.text_field :units, :class => "input-full" %>
          </div>
          <div class="eight columns omega">
            <%= f.label :notes %>
            <%= f.text_area :notes, :rows => 10, :class => "input-full" %>
          </div>
        </div>

        <div class="form-actions">
          <div class="button-group">
            <%= link_to( @variable ) do %>
              <button class="button">Show</button>
            <% end%>
            <%= link_to( variables_path ) do %>
              <button class="button">Back</button>
            <% end%>
          </div>
					<div class="button-group pull-right">
						<%= f.submit 'Update', :class => "button button-primary" %>
					</div>
				</div>
          
      <% end %>
      
    </div>
  </div>
</div>









