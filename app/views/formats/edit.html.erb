<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
	      <h1>Editing Format</h1>
			</header>

      <a style="text-decoration: none" href="#" onclick="showHide('edit_formats_variables')" id="show_edit_formats_variables">[+] View Related Variable</a>
      <br/>
      <div id="edit_formats_variables" class="hidden notvisible">
        <%= render 'edit_formats_variables' %>
      </div>
      <hr />
      <%= form_for :form, @format, :url => { :action => "update", :id => @format.id }, :html => {:method => :put} do |f| %>
        <%= f.error_messages %>

        <div class="row">
          <div class="four columns alpha">
            <%= f.label :mime_type %>
            <%= f.select :mime_type, Mimetype.order("id desc").collect(&:type_string), {:include_blank => true } %>
          </div>
          <div class="four columns">
            <%= f.label :new_mime_type %>
            <%= text_field :mime_type_other, :class => "input-full" %>
          </div>
          <div class="eight columns omega">
            <%= f.label :name %>
            <%= f.text_field :name, :class => "input-full" %>
          </div>
        </div>
        
        <div class="row">
          <div class="eight columns alpha">
            <%= f.label :header %>
            <%= f.text_field :header, :class => "input-full" %>
          </div>
          <div class="eight columns omega">
            <%= f.label :skip %>
            <%= f.text_field :skip, :class => "input-full" %>
          </div>
        </div>
        
        <div class="row">
          <div class="eight columns alpha">
            <%= f.label :dataformat %>
            <%= f.text_area :dataformat, :rows => 10, :class => "input-full" %>
          </div>
          <div class="eight columns omega">
            <%= f.label :notes %>
            <%= f.text_area :notes, :rows => 10, :class => "input-full" %>
          </div>
        </div>

        <div class="form-actions">
          <div class="button-group">
            <%= link_to( @formats ) do %>
              <button class="button">Show</button>
            <% end%>
            <%= link_to( formats_path ) do %>
              <button class="button">Back</button>
            <% end%>
          </div>
					<div class="button-group pull-right">
						<%= f.submit 'Update', :class => "button button-primary" %>
					</div>
				</div>
      <% end %>
  
    </div>
  </div>
</div>
