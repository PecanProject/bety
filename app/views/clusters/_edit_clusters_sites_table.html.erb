<table>
  <tr>
    <th></th>
    <th></th>
    <th>Name</th>
  </tr>
    <% @sites.each do |site| %>
    <tr>
      <td>
      <% if @cluster.sites.include?(site) %>
        <%= link_to "X", { :controller => :clusters, :action => :edit_clusters_sites, :id => @cluster.id, :site => site, :search => @searchparam }, :remote => true,
                          :html => { :style => "text-decoration: none" } %>


      <% else %>
        <%= link_to "+", { :controller => :clusters, :action => :edit_clusters_sites, :id => @cluster.id, :site => site, :search => @searchparam }, :remote => true,
                          :html => { :style => "text-decoration: none" } %>


      <% end %>
      </td>
      <td><%= link_to "edit", edit_site_path(site) %></td>
      <td><%= link_to site, site_path(site) %></td>
      </tr>
    <% end %>
</table>

<%= will_paginate @sites, :renderer => 'WillPaginate::ActionView::RemoteLinkRenderer' , :params => {:action => :edit_clusters_sites, :id => @cluster.id, :search => @searchparam}, :remote => { :loading => "Element.show('spinner')", :complete => "Element.hide('spinner')" } %>

