<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
				<h1>Viewing Cluster</h1>
			</header>
			
			<a style="text-decoration: none" href="#" onclick="showHide('show_sites')" id="show_show_sites">[+] View Related Sites</a>
			<br/>
			<div id="show_sites" class="hidden notvisible">
				<%= render 'show_sites' %>
			</div>

			<hr />
			<br />
			<br />

			<!-- InstanceBeginEditable name="Full Width Content" --> 
			<dl class="dl-horizontal">
                <dt>Name</dt>
                <dd><%= @cluster.name %></dd>
                <dt>Associated Sites</dt>
                <dd><%= @cluster.sites.length %></dd>
                <dt>Everybody</dt>
                <dd><%= @cluster.everybody %></dd>
                <dt>Created by:</dt>
                <dd><%= user_for_view(@cluster.user) %></dd>
                <dt>Last updated:</dt>
                <dd><%= @cluster.updated_at %></dd>
			</dl>

			<div class="form-actions">
				<div class="button-group">
					<%= link_to( clusters_path ) do %>
						<button class="button"><i class="icon-arrow-left"></i> All Records</button>
					<% end %>
                    <% if current_user.page_access_level == 1 || current_user.id == @cluster.user_id %>
                        <%= link_to( edit_cluster_path(@cluster) ) do %>
                            <button type="submit" class="button button-primary"><i class="icon-edit"></i> Edit Record</button>  
                        <% end %>
                    <% end %>
				</div>
			</div>
			<!-- InstanceEndEditable --> </div>
	</div>
	<!-- container --> 
</div>
