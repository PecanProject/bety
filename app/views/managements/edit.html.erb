<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
	      <h1>Editing Management</h1>
			</header>

      <a style="text-decoration: none" href="#" onclick="showHide('edit_managements_treatments')" id="show_edit_managements_treatments">[+] View Related Treatments</a>
      <br/>
      <div id="edit_managements_treatments" class="hidden notvisible">
        <%= render 'edit_managements_treatments' %>
      </div>
      <hr />

      <%= form_for(@management) do |f| %>
        <%= f.error_messages %>

        <div class="row">
          <div class="eight columns alpha">
            <%= f.label :citation_id %>
            <%= f.select :citation_id, Citation.order('author').collect { |p| [ p.select_default, p.id ] }, {:include_blank => ""}, :class => "input-full" %>
          </div>
          <div class="eight columns omega">
            <%= f.label :date %>
            <%= f.date_select :date,{ :start_year => 1800, :include_blank => true } %>
          </div>
        </div>
        
        <div class="row">
          <div class="four columns alpha">
            <%= f.label :dateloc, "Date Level of Confidence" %>
            <%= f.select :dateloc, options_for_select($dateloc_drop.sort,f.object.dateloc.to_s), :class => "input-full" %>
          </div>
          <div class="four columns">
            <%= f.label :mgmttype, "Management Type" %>
            <%= f.select :mgmttype, Management.management_types, :class => "input-full" %>
          </div>
          <div class="four columns">
            <%= f.label :level %>
            <%= f.text_field :level, :class => "input-full"  %>
          </div>
          <div class="four columns omega">
            <%= f.label :units %>
            <%= f.text_field :units, :class => "input-full" %>
          </div>
        </div>

        <div class="row">
          <div class="sixteen columns alpha omega">
            <%= f.label :notes %>
            <%= f.text_area :notes, :rows => 5, :class => "input-full" %>
          </div>
        </div>
        <div class="row">
          <div class="sixteen columns">
            <%= f.label :user %>
            <%= @management.user ? @management.user : "none" %>
          </div>
        </div>

        <div class="form-actions">
          <div class="button-group">
            <%= link_to( @management ) do %>
              <button class="button">Show</button>
            <% end%>
            <%= link_to( managements_path ) do %>
              <button class="button">Back</button>
            <% end%>
          </div>
					<div class="button-group pull-right">
						<%= f.submit 'Update', :class => "button button-primary" %>
					</div>
				</div>
          
      <% end %>
    </div>
  </div>
</div>









































