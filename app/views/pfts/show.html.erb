<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
				<h1>Viewing PFT</h1>
			</header>
			
			<a style="text-decoration: none" href="#" onclick="showHide('show_pfts_species')" id="show_show_pfts_species">[+] View Related Species</a>
      <br/>
      <br/>
      <div id="show_pfts_species" class="hidden notvisible">
        <%= render 'show_pfts_species' %>
      </div>
      <hr />
      <br />

      <a style="text-decoration: none" href="#" onclick="showHide('show_pfts_priors')" id="show_show_pfts_priors">[+] View Related Priors</a>
      <br/>
      <div id="show_pfts_priors" class="hidden notvisible">
        <%= render 'show_pfts_priors' %>
      </div>

      <hr />
      <br />
      <br />
      
			<!-- InstanceBeginEditable name="Full Width Content" --> 
			<dl class="dl-horizontal">
				<dt>Name</dt>
				<dd><%= @pft.name %></dd>
				<dt>Definition</dt>
				<dd><%= @pft.definition %></dd>
				<dt>Type</dt>
				<dd><%= @pft.pft_type %></dd>
				<dt>Parent</dt>
				<dd><%= link_to_if @pft.parent, @pft.parent, @pft.parent %></dd>
				<dt>Clones</dt>
				<% @pft.children.each do |child| %>					
					<dd><%= link_to_if child, child, child %></dd>
				<% end %>
			</dl>

			<div class="form-actions">
				<div class="button-group">
          <%= link_to( pfts_path ) do %>
					  <button class="button"><i class="icon-arrow-left"></i> Go Back</button>
					<% end %>
					<%= link_to( edit_pft_path(@pft) ) do %>
    			  <button type="submit" class="button button-primary"><i class="icon-edit"></i> Edit Record</button>	
  				<% end %>
					<%= link_to( make_clone_pft_path(@pft) ) do %>
    			  <button type="submit" class="button button-primary"><i class="icon-plus"></i> Clone Record</button>	
  				<% end %>
					
				</div>
			</div>
			<!-- InstanceEndEditable --> </div>
	</div>
	<!-- container --> 
</div>
