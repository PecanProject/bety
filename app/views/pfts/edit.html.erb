<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
        <h1>Editing PFT</h1>
			</header>

      <a style="text-decoration: none" href="#" onclick="showHide('edit_pfts_priors')" id="show_edit_pfts_priors">[+] View Related Priors</a>
      <br/>
      <div id="edit_pfts_priors" class="hidden notvisible">
        <%= render 'edit_pfts_priors' %>
      </div>

      <hr />

      <a style="text-decoration: none" href="#" onclick="showHide('edit2_pfts_species')" id="show_edit2_pfts_species">[+] View Related Species</a>
      <div id="edit2_pfts_species" class="hidden notvisible">
        <%= render 'edit2_pfts_species' %>
      </div>

      <hr />

      <%= form_for(@pft) do |f| %>
        <%= f.error_messages %>

        <div class="row">
          <div class="sixteen columns alpha">
            <%= f.label :name %>
            <%= f.text_field :name, :class => "input-full" %>
          </div>
          <div class="row">
            <div class="sixteen columns alpha">
              <%= f.label :model_type %>
              <%= f.collection_select(:model_type, Model.find(:all, :select => "DISTINCT model_type"), :model_type, :model_type, {:selected => @pft.model_type}) %>
            </div>
          </div>                    
          <div class="sixteen columns alpha">
            <%= f.label :definition %>
            <%= f.text_area :definition, :rows => 10, :class => "input-full" %>
          </div>
        </div>
        
        <div class="form-actions">
          <div class="button-group">
            <%= link_to( pfts_path ) do %>
              <button class="button" type="button"><i class="icon-arrow-left"></i> All Records</button>
            <% end%>
            <%= link_to( @pft ) do %>
              <button class="button" type="button">Show</button>
            <% end%>
          </div>
					<div class="button-group pull-right">
						<%= f.submit 'Update', :class => "button button-primary" %>
					</div>
				</div>

      <% end %>
  
    </div>
  </div>
</div>













