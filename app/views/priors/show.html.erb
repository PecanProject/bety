<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
				<h1>Viewing Prior</h1>
			</header>
      
			<!-- InstanceBeginEditable name="Full Width Content" --> 
			<dl class="dl-horizontal">
				<dt>Citation</dt>
				<dd><%= link_to_if @prior.citation, @prior.citation, @prior.citation %></dd>
				<dt>Variable</dt>
				<dd><%= link_to_if @prior.variable, @prior.variable, @prior.variable %></dd>
				<dt>Phylogeny</dt>
				<dd><%= @prior.phylogeny %></dd>
				<dt>Distn</dt>
				<dd><%= @prior.distn %></dd>
				<dt>Param a</dt>
				<dd><%= @prior.parama %></dd>
				<dt>Param b</dt>
				<dd><%= @prior.paramb %></dd>
				<dt>N</dt>
				<dd><%= @prior.n %></dd>
				<dt>Notes</dt>
                <dd><%= @prior.notes %></dd>
                <dt>Graph</dt>
                <dd><%= image_tag preview_prior_path(@prior) %></dd>
			</dl>
			<div class="form-actions">
				<div class="button-group">
          <%= link_to( priors_path ) do %>
					  <button class="button"><i class="icon-arrow-left"></i> All Records</button>
					<% end %>
					<%= link_to( edit_prior_path(@prior) ) do %>
    			  <button type="submit" class="button button-primary"><i class="icon-edit"></i> Edit Record</button>	
  				<% end %>
					
				</div>
			</div>
			<!-- InstanceEndEditable --> </div>
	</div>
	<!-- container --> 
</div>

