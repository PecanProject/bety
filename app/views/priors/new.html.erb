
<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
        <h1>New Prior</h1>
      </header>

      <%= form_for(@prior) do |f| %>
        <%= f.error_messages %>

        <div class="row">
          <div class="eight columns alpha">
            <%= f.label :citation_id %>
            <%= f.select :citation_id, Citation.order('author').collect { |p| [ p.select_default, p.id ] }, { :include_blank => true }, :class => "input-full" %>
            <em><%= link_to "New Citation", new_citation_path %></em>
          </div>
          
          <div class="eight columns omega">
            <%= f.label :variable_id %>
            <%= f.select :variable_id, Variable.order('description').collect { |p| [ p.select_default, p.id ] }, {:selected => @prior.variable_id.to_i }, :class => "input-full" %>
          </div>
        </div>

        <div class="row">
          <div class="three columns alpha">
            <%= f.label :phylogeny %>
            <%= f.text_field :phylogeny, :class => "input-full" %>
          </div>
          <div class="five columns">
            <%= f.label :distribution %>
            <%= f.select :distn, %w(beta binom cauchy chisq exp f gamma geom hyper lnorm logis nbinom norm pois t unif weibull wilcox), :class => "input-full" %><br />
            <em><%= link_to "More information about distributions", "http://cran.r-project.org/doc/manuals/R-intro.html#R-as-a-set-of-statistical-tables", :target =>"_blank" %></em>
          </div>
          <div class="three columns">
            <%= f.label :parameter_a %>
            <%= f.text_field :parama %>
          </div>
          <div class="three columns">
            <%= f.label :parameter_b %>
            <%= f.text_field :paramb %>
          </div>
          <div class="two columns omega">
            <%= f.label :n %>
            <%= f.text_field :n %>
          </div>
        </div>
        
        <div class="row">
          <div class="sixteen columns alpha">
            <%= f.label :notes %>
            <%= f.text_area :notes, :rows => 10, :class => "input-full"  %>
          </div>
        </div>
        
        <div class="form-actions">
          <div class="button-group">
            <%= link_to( priors_path ) do %>
              <button class="button">Back</button>
            <% end%>
          </div>
		      <div class="button-group pull-right">
			      <%= f.submit 'Create', :class => "button button-primary" %>
		      </div>
	      </div>
      <% end %>
    </div>
  </div>
</div>


