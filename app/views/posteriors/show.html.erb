<div class="content">
  <div class="container">
    <div class="sixteen columns">
      <header>
        <h1>Viewing Posterior</h1>
      </header>

      <a style="text-decoration: none" href="#" onclick="showHide('show_files')" id="show_show_files">[+] View Related Files</a>
      <br/>
      <div id="show_files" class="hidden notvisible">
        <%= render 'show_files' %>
      </div>

      <br>
      <hr>

      <!-- InstanceBeginEditable name="Full Width Content" --> 
      <dl class="dl-horizontal">
        <dt>Pft</dt>
        <dd><%= link_to_if @posterior.pft, @posterior.pft, @posterior.pft %></dd>
        <dt>Format</dt>
        <dd><%= link_to_if @posterior.format, @posterior.format, @posterior.format %></dd>
      </dl>

      <div class="form-actions">
        <div class="button-group">
          <%= link_to( posteriors_path ) do %>
            <button class="button"><i class="icon-arrow-left"></i> All Records</button>
          <% end %>
        </div>
      </div>
      <!-- InstanceEndEditable --> </div>
  </div>
  <!-- container --> 
</div>
