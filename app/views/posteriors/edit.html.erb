<h1>Editing posterior</h1>

<%= form_for(@posterior) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :pft %><br />
    <%= f.select :pft_id, Pft.all.collect { |p| [ p.select_default, p.id] } %>
  </p>
  <p>
    <%= f.label :format_id %><br />
    <%= f.select :format_id, Format.all.collect { |p| [p.select_default, p.id ] }, :include_blank => true %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<div class="form-actions">
        <div class="button-group">
          <%= link_to( posteriors_path ) do %>
            <button class="button"><i class="icon-arrow-left"></i> All Records</button>
          <% end %>
          <%= link_to( @posterior ) do %>
            <button type="submit" class="button button-primary">Show</button>
          <% end %>

        </div>
      </div>
