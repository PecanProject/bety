
<div class="content">
    <div class= "container">
      <div class = "sixteen columns">
        <header>
          <h1>Viewing specie description </h1>
        </header>


<dl class = "dl-horizontal">
    <dt>Plant:</dt>
    <dd><%= @specie.AcceptedSymbol %></dd>
    <dt>Spcd:</dt>
    <dd><%= @specie.spcd %></dd>
    <dt>Genus:</dt>
    <dd><%= @specie.genus %></dd>
    <dt>Species:</dt>
    <dd><%= @specie.species %></dd>
    <dt>Scientificname:</dt>
    <dd><%= @specie.scientificname %></dd>
    <dt>Commonname:</dt>
    <dd><%= @specie.commonname %></dd>
    
  </dl>


<div class="form-actions">
                <div class="button-group">
          <%= link_to( species_path ) do %>
                      <button class="button"><i class="icon-arrow-left"></i> Go Back</button>
                    <% end %>
                    <%= link_to( edit_species_path(@specie) ) do %>
                  <button type="submit" class="button button-primary"><i class="icon-edit"></i> Edit Record</button>    
                <% end %>
                    
                </div>
            </div>

        </div>
    </div>
</div>
