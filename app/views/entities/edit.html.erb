<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
	      <h1>Editing Entity</h1>
			</header>
      <hr>

      <%= form_for(@entity) do |f| %>
        <%= f.error_messages %>
        
        <div class="row">
          <div class="eight columns alpha">
            <%= f.label :parent %>
            <%= f.select :parent_id, Entity.all.collect {|p| [ p.select_default, p.id] },{:include_blank => true}, :class => "input-full" %>
          </div>
          <div class="eight columns omega">
            <%= f.label :name %>
            <%= f.text_field :name, :class => "input-full" %>
          </div>
        </div>

        <div class="row">
          <div class="sixteen columns alpha omega">
            <%= f.label :notes %>
            <%= f.text_area :notes, :rows => 10, :class => "input-full" %>
          </div>
        </div>

        <div class="form-actions">
          <div class="button-group">
            <%= link_to( @entity ) do %>
              <button class="button">Show</button>
            <% end%>
            <%= link_to( entities_path ) do %>
              <button class="button">Back</button>
            <% end%>
          </div>
					<div class="button-group pull-right">
						<%= f.submit 'Update', :class => "button button-primary" %>
					</div>
				</div>

      <% end %>
    </div>
  </div>
</div>






