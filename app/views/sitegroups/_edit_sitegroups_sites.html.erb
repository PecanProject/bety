<h1>Listing Sites</h1>
<p>
  <b>Search: </b><%= text_field_tag :sitesearch -%><br /><span id="spinner" style="display: none;width: 16px"><img src="data:image/gif;base64," /></span>
  <br />
  <span id="sites_search_term">Showing already related records</span><br />
  <%= link_to "Show only related results", { :controller => :sitegroups, :action => :edit_sitegroups_sites, :id => @sitegroup.id }, :remote => true,
                      :onclick => "Form.Element.setValue('sitesearch','')",
                      :with => "'search='",
                      :html => { :style => "text-decoration: none" } %>
</p>

<div id="sites_index_table">
<%= render :partial => "edit_sitegroups_sites_table" -%>
</div>

<%= observe_field :sitesearch,
                  :frequency => 1,
                  :loading => "Element.show('spinner')",
                  :complete => "Element.hide('spinner')",
                  :with => "'search='+Form.Element.getValue('sitesearch')",
                  :url => { :action => :edit_sitegroups_sites, :id => @sitegroup.id } %>
