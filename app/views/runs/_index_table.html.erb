<!-- InstanceBeginEditable name="Full Width Content" -->
<div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline" role="grid">
  <%= render 'shared/search_form' %>
  <table class="table table-striped table-bordered table-hover datatable dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
          <thead>
          <tr role="row">
<th class="sorting_asc" role="columnheader" aria-controls="DataTables_Table_0" style="width: 100px;" aria-sort="ascending"><%= sortable "models.model_name", "Model" %></th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0"><%= sortable "sites.sitename", "Site" %></th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0"><%= sortable "runs.start_time", "Start time" %></th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0"><%= sortable "runs.finish_time", "Finish time" %></th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0"><%= sortable "runs.started_at", "Started at" %></th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0"><%= sortable "runs.finished_at", "Finished at" %></th>
<th role="columnheader" aria-controls="DataTables_Table_0" style="width: 80px">Actions</th>
      </tr>
    </thead>





<% @runs.each do |run| %>
  <tr>
    <td class="center"><%= link_to_if run.model, run.model, run.model %></td>
    <td class="center"><%= link_to_if run.model, run.site, run.site %></td>
    <td class="center"><%= run.start_time %></td>
    <td class="center"><%= run.finish_time %></td>
    <td class="center"><%= run.started_at %></td>
    <td class="center"><%= run.finished_at %></td>
    <td class="center ">
      <!-- SHOW -->
      <%= link_to run, :class => "button button-small", :alt => "show" do %>
      <i class="icon-zoom-in"></i>
      <% end %>
      <!-- DELETE -->
      <% if current_user.page_access_level == 1 %>
      <%= link_to run, :method => :delete, :type => 'run', data: { :confirm => 'Are you sure?' }, :class=> 'button button-small button-danger', :alt => "delete" do %>
      <i class="icon-trash"></i> 
      <% end %>
      <% end %>
  </td>
  </tr>
<% end %>
</table>

    <div class="row final_paginate_row">
      <div class="span6">
        <div class="dataTables_info" id="DataTables_Table_0_info">
          <%= page_entries_info @runs %>
        </div>
      </div>
      <div class="span6">
        <div class="dataTables_paginate paging_bootstrap pagination alternate">
        <%= will_paginate @runs %>
      </div>
    </div>
  </div>
</div>
