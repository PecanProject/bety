<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
        <h1>New Cultivar</h1>
      </header>

      <%= form_for(@cultivar) do |f| %>
        <%= f.error_messages %>
        
        <div class="row">
          <div class="sixteen columns alpha">
            <%= render :partial => "species/species_search" %>    
          </div>
        </div>
        
        <div class="row">
          <div class="eight columns alpha">
            <%= f.label :name %>
            <%= f.text_field :name, :class => "input-full"  %>
            <br />
            <%= f.label :ecotype %>
            <%= f.text_field :ecotype, :class => "input-full"  %>
          </div>
          <div class="eight columns omega">
            <%= f.label :notes %>
            <%= f.text_area :notes, :rows => 10, :class => "input-full"  %>
          </div>
        </div>
        
        <div class="form-actions">
          <div class="button-group">
            <%= link_to( cultivars_path ) do %>
              <button class="button">Back</button>
            <% end%>
          </div>
		      <div class="button-group pull-right">
			      <%= f.submit 'Create', :class => "button button-primary" %>
		      </div>
	      </div>
      <% end %>
    </div>
  </div>
</div>

