<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
				<h1>Viewing Method</h1>
			</header>
      
			<!-- InstanceBeginEditable name="Full Width Content" --> 
			<dl class="dl-horizontal">
				<dt>Name</dt>
				<dd><%= @method.name %></dd>
				<dt>Description</dt>
				<dd><%= @method.description %></dd>
				<dt>Citation</dt>
				<dd><%= @method.citation %></dd>
			</dl>
			
			<div class="form-actions">
				<div class="button-group">
          <%= link_to( methods_path ) do %>
					  <button class="button"><i class="icon-arrow-left"></i> Go Back</button>
					<% end %>
					<%= link_to( edit_method_path(@citation) ) do %>
    			  <button type="submit" class="button button-primary"><i class="icon-edit"></i> Edit Record</button>	
  				<% end %>
					
				</div>
			</div>
			<!-- InstanceEndEditable --> </div>
	</div>
	<!-- container --> 
</div>
