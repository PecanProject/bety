<!-- InstanceBeginEditable name="Full Width Content" -->
<div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline" role="grid">
  <%= render 'shared/search_form' %>
    <table class="table table-striped table-bordered table-hover datatable dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
			  <thead>
		      <tr role="row">
<th class="sorting_asc" role="columnheader" aria-controls="DataTables_Table_0" style="width: 80px;" aria-sort="ascending" >Runtype</th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 300px">Notes</th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 100px">Created</th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 100px">Updated</th>
<th role="columnheader" aria-controls="DataTables_Table_0" style="width: 110px">Actions</th>
        </tr>
	    </thead>
	    
		  <tbody role="alert" aria-live="polite" aria-relevant="all">
		    <% @ensembles.each do |ensemble| %>
          <tr<%= " style='background-color:yellow'" if @search and !@search[/[^\d]/] and ensemble.id == @search.to_i%>>
            <td class="center"><%= ensemble.runtype %></td>
            <td class="center"><%= ensemble.notes %></td>
            <td class="center"><%= ensemble.created_at %></td>
            <td class="center"><%= ensemble.updated_at %></td>
						<td class="center ">
						  <!-- SHOW -->
						  <%= link_to ensemble, :class => "button button-small", :alt => "show" do %>
						    <i class="icon-zoom-in"></i>
						  <% end %>
						  <!-- DELETE -->
						  <% if current_user.page_access_level == 1 %>
                <%= link_to ensemble, :method => :delete, :type => 'ensemble', data: { :confirm => 'Are you sure?' }, :class=> 'button button-small button-danger', :alt => "delete" do %>
                  <i class="icon-trash"></i> 
                <% end %>
              <% end %>
					  </td>
          </tr>
        <% end %>
		  </tbody>
		</table>
    
		<div class="row final_paginate_row">
		  <div class="span6">
		    <div class="dataTables_info" id="DataTables_Table_0_info">
  		    <%= page_entries_info @ensembles %>
		    </div>
		  </div>
		  <div class="span6">
		    <div class="dataTables_paginate paging_bootstrap pagination alternate">
          <%= will_paginate @ensembles %>
        </div>
      </div>
    </div>
  </div>


