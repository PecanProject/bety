<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
        <h1>Editing Ensemble</h1>
			</header>

      <%= form_for(@ensemble) do |f| %>
        <%= f.error_messages %>
        
        <div class="row">
          <div class="four columns alpha">
            <%= f.label :runtype %>
            <%= f.select :runtype, Ensemble::RUNTYPETYPES, :include_blank => true, :class => "input-full"  %>
          </div>
          <div class="twelve columns omega">
            <%= f.label :notes %>
            <%= f.text_area :notes, :rows => 10, :class => "input-full"  %>
          </div>
        </div>
   
   
        <div class="form-actions">
          <div class="button-group">
            <%= link_to( @ensemble ) do %>
              <button class="button">Show</button>
            <% end%>
            <%= link_to( ensembles_path ) do %>
              <button class="button">Back</button>
            <% end%>
          </div>
					<div class="button-group pull-right">
						<%= f.submit 'Update', :class => "button button-primary" %>
					</div>
				</div>

      <% end %>
    </div>
  </div>
</div>

