<!-- InstanceBeginEditable name="Full Width Content" -->
<div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline" role="grid">
<%= render 'shared/search_form' %>
<table class="table table-striped table-bordered table-hover datatable dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
  <thead>
    <tr role="row">
      <th class="sorting_asc" role="columnheader" aria-controls="DataTables_Table_0"  aria-sort="ascending"><%= sortable "models.model_name", "Model name" -%></th>
      <th class="sorting_asc" role="columnheader" aria-controls="DataTables_Table_0"  aria-sort="ascending"><%= sortable "models.model_path", "Model path" -%></th>
      <th class="sorting_asc" role="columnheader" aria-controls="DataTables_Table_0"  aria-sort="ascending"><%= sortable "models.revision", "Revision" -%></th>
      <th class="sorting_asc" role="columnheader" aria-controls="DataTables_Table_0" aria-sort="ascending">Parent</th>
    </tr>
  </thead>
  <tbody role="alert" aria-live="polite" aria-relevant="all">

    <% @models.each do |model| %>
    <tr<%= " style='background-color:yellow'" if @search and !@search[/[^\d]/] and model.id == @search.to_i%>>
    <td class="center"><%= model.model_name %></td>
    <td class="center"><%= model.model_path %></td>
    <td class="center"><%= model.revision %></td>
    <td class="center ">
      <!-- SHOW -->
      <%= link_to model, :class => "button button-small", :alt => "show" do %>
      <i class="icon-zoom-in"></i>
      <% end %>
      <!-- EDIT -->
      <%= link_to edit_model_path(model), :class => "button button-small", :alt => "edit" do %>
      <i class="icon-edit"></i>
      <% end %>
      <!-- DELETE -->
      <% if current_user.page_access_level == 1 %>
      <%= link_to model, :method => :delete, :type => 'model', :confirm => 'Are you sure?', :class=> 'button button-small button-danger', :alt => "delete" do %>
      <i class="icon-trash"></i> 
      <% end %>
      <% end %>
    </td>
  </tr>
  <% end %>




</table>

<div class="row final_paginagte_row">
  <div class="span6">
    <div class="dataTables_info" id="DataTables_Table_0_info">
      <%= page_entries_info @models %>
    </div>
  </div>
  <div class="span6">
    <div class="dataTables_paginate paging_bootstrap pagination alternate">
      <%= will_paginate @models %>
    </div>
  </div>
</div>
</div>
