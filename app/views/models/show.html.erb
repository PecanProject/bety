<div class="content">
  <div class="container">
    <div class="sixteen columns">
      <header>
        <h1>Viewing Input</h1>
      </header>

      <a style="text-decoration: none" href="#" onclick="showHide('show_files')" id="show_show_files">[+] View Related Files</a>
      <br/>
      <div id="show_files" class="hidden notvisible">
        <%= render 'show_files' %>
      </div>

      <br>
      <hr>

      <!-- InstanceBeginEditable name="Full Width Content" --> 
      <dl class="dl-horizontal">
        <dt>name</dt>
        <dd><%= @model.model_name %></dd>
        <dt>Type</dt>
        <dd><%= @model.model_type %></dd>
        <dt>Revision</dt>
        <dd><%= @model.revision %></dd>
        <dt>Parent</dt>
        <dd><%= link_to_if @model.parent, @model.parent, @model.parent %></dd>
        <dt>Clones</dt>
        <% @model.children.each do |child| %>         
          <dd><%= link_to_if child, child, child %></dd>
        <% end %>
      </dl>

      <div class="form-actions">
        <div class="button-group">
          <%= link_to( models_path ) do %>
            <button class="button"><i class="icon-arrow-left"></i> All Records</button>
          <% end %>
          <%= link_to( edit_model_path(@model) ) do %>
            <button type="submit" class="button button-primary"><i class="icon-edit"></i> Edit Record</button>  
          <% end %>
        </div>
      </div>
      <!-- InstanceEndEditable --> </div>
  </div>
  <!-- container --> 
</div>

