<h2>Associated Formats</h2>

<table>
  <tr>
    <th>Format</th>
    <th>Tag</th>
    <th>Required</th>
    <th>Input</th>
  </tr>
  <% @modeltype.modeltypes_formats.each do |c| %>
  <tr>
    <td><%=h c.format %></td>
    <td><%=h c.tag %></td>
    <td><%=h c.required %></td>
    <td><%=h c.input %></td>
    <td><%= link_to "Show", c.format %></td>
  </tr>
  <% end %>
</table>
