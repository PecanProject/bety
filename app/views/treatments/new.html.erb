<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
        <h1>New Treatment</h1>
      </header>

      <%= form_for(@treatment) do |f| %>
        <%= f.error_messages %>
        
        <div class="row">
          <div class="eight columns alpha">
            <%= f.label :name %>
            <%= f.text_field :name, :class => "input-full"  %>
          </div>

          <div class="eight columns omega">
            <%= f.label :definition %>
            <%= f.text_field :definition, :class => "input-full" %>
          </div>
        </div>

        <div class="row">
          <div class="two columns alpha">
            <%= f.label :control %>
            <%= f.select :control, [["True",true],["False",false]], { :include_blank => true } %>
          </div>
          <div class="fourteen columns omega">
            &nbsp;
          </div>
        </div>
        
        <div class="row">
          <div class="two columns alpha">
            <%= f.label :user %>
            <%= current_user %>
          </div>
          <div class="fourteen columns omega">
            &nbsp;
          </div>
        </div>
         
        <div class="form-actions">
          <div class="button-group">
            <%= link_to( treatments_path ) do %>
              <button class="button" type="button"><i class="icon-arrow-left"></i> All Records</button>
            <% end%>
          </div>
		      <div class="button-group pull-right">
			      <%= f.submit 'Create', :class => "button button-primary" %>
		      </div>
	      </div>

      <% end %>
    </div>
  </div>
</div>

