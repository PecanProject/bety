
<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
				<h1>Viewing Site Citations</h1>
			</header>

			<table>
        <tr>
          <th>Author, Year, Title</th>
        </tr>
        <% @site.citations.each do |citation| %>
        <tr>
          <td><%= link_to citation, citation %></td>
        </tr>
        <% end %>
      </table>

      <hr>

      <p><span id="site_link_<%= @site.id %>" class="popup_link">Map</span><br />
        <%#= render :partial => "site_popup", :locals => {:site => @site } %>
      </p>
      
      
			<!-- InstanceBeginEditable name="Full Width Content" --> 
			<dl class="dl-horizontal">
			  <dt>Site Name:</dt>
        <dd><%= @site.sitename.nil? ? "none" : @site.sitename %></dd>
        <dt>City:</dt>
        <dd><%= @site.city.nil? ? "none" : @site.city %></dt>
        <dt>State:</dt>
        <dd><%= @site.state.nil? ? "none" : @site.state %></dt>
        <dt>Country:</dt>
        <dd><%= @site.country.nil? ? "none" : @site.country %></dt>
        <dt>Lat:</dt>
        <dd><%= @site.lat.nil? ? "none" : @site.lat %></dt>
        <dt>Lon:</dt>
        <dd><%= @site.lon.nil? ? "none" : @site.lon %></dt>
        <dt>Mean Annual Temperature (Â°C)</dt>
        <dd><%= @site.mat.nil? ? "none" : @site.mat  %></dt>
        <dt>Mean Annual Precipitation (mm/yr):</dt>
        <dd><%= @site.map.nil? ? "none" : @site.map  %></dt>
        <dt>Elevation (m):</dt>
        <dd><%= @site.masl.nil? ? "none" : @site.masl  %></dt>
        <dt>Soil:</dt>
        <dd><%= @site.soil.nil? ? "none" : @site.soil  %></dt>
        <dt>Local Time:</dt>
        <dd><%= @site.local_time.nil? ? "none" : @site.local_time  %></dt>
        <dt>Espg:</dt>
        <dd><%= @site.espg.nil? ? "none" : @site.user  %></dt>
        <dt>% Clay:</dt>
        <dd><%= @site.clay_pct.nil? ? "none" : @site.clay_pct  %></dt>
        <dt>% Sand:</dt>
        <dd><%= @site.sand_pct.nil? ? "none" : @site.sand_pct  %></dt>
        <dt>Greenhouse:</dt>
        <dd><%= @site.greenhouse ? "True" : "False" %></dt>
        <dt>Som:</dt>
        <dd><%= @site.som.nil? ? "none" : @site.som  %></dt>
        <dt>Notes:</dt>
        <dd><%= @site.notes.nil? ? "none" : @site.notes  %></dt>
        <dt>Soilnotes:</dt>
        <dd><%= @site.soilnotes.nil? ? "none" : @site.soilnotes  %></dt>
        <dt>User:</dt>
        <dd><%= @site.user.nil? ? "none" : @site.user %></dd>
			</dl>
			
			<div class="form-actions">
				<div class="button-group">
          <%= link_to( sites_path ) do %>
					  <button class="button"><i class="icon-arrow-left"></i> Go Back</button>
					<% end %>
					<%= link_to( edit_site_path(@site) ) do %>
    			  <button type="submit" class="button button-primary"><i class="icon-edit"></i> Edit Record</button>	
  				<% end %>
					
				</div>
			</div>
			<!-- InstanceEndEditable --> </div>
	</div>
	<!-- container --> 
</div>

